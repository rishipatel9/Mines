generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String @unique
  cash Int @default(1000)
  game Game[] 
}

model Game{
  id  Int @id @default(autoincrement())
  bet String
  multiplier String
  payout String
  userId Int
  user User @relation(fields: [userId],references: [id])

}
